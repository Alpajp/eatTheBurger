<div class="container">

    <div class="row">
        <div class="col-4"></div>
        <div class="col-4 text-center enter_section">
            <form action="/api/burgers/" method="POST">
                <input type="text" class="form-control text-center" name="burger_name" placeholder="Order Burger" id="enter_text">
                <br>
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-1"></div>
        <div class="col-4 bg-primary text-white text-center p-3">
            {{#each burgerList}}
            {{#unless this.devoured}}
            <div>
                <h5 class="servedBurger">{{this.id}}. {{this.burger_name}} </h5> <i class="fas fa-utensils"></i>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-2"></div>
        <div class="col-4 bg-secondary text-white text-center p-3">
            {{#each burgerList}}
            {{#if this.devoured}}
            <div>
                 <h5 class="devouredBurger">{{this.id}}. {{this.burger_name}} </h5> <i class="fas fa-trash-alt"></i>
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>